{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": "error"
  },
  "ignorePatterns": [
    "*.spec.js",
    "*.test.js",
    "*.d.ts",
    "dist",
    "client",
    "build",
    "public"
  ]
}
