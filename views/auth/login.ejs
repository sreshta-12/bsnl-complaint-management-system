<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/message') %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0">üîê Login to BSNL Portal</h4>
        </div>

        <div class="card-body">
          <form action="/users/login" method="POST">

            <!-- Email -->
            <div class="form-group">
              <label for="email">Email</label>
              <input required type="email" name="email" id="email" class="form-control" placeholder="Enter your email">
            </div>

            <!-- Password -->
            <div class="form-group">
              <label for="password">Password</label>
              <input required type="password" name="password" id="password" class="form-control" placeholder="Enter password">
            </div>

            <!-- Captcha -->
            <div class="form-group">
              <label for="captcha">Captcha</label><br>
              <img src="/users/captcha" alt="Captcha" class="mb-2 border" onclick="this.src='/users/captcha?' + Math.random()" style="cursor: pointer;" />
              <input type="text" name="captcha" class="form-control" placeholder="Enter captcha text" required>
            </div>

            <button type="submit" class="btn btn-success btn-block">Login</button>

            <!-- Forgot password & Resend OTP -->
            <div class="text-center mt-3">
              <a href="/users/reset-password" class="text-primary">Forgot Password?</a> |
              <a href="/users/resend-otp" class="text-primary">Resend OTP?</a>
            </div>
          </form>
        </div>

        <div class="card-footer text-center">
          Don‚Äôt have an account? <a href="/users/signup">Create one here</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
