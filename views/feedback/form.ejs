<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container mt-5 mb-5">
  <div class="card p-4 shadow-sm">
    <h3 class="text-center text-primary mb-4"> Submit Feedback</h3>

    <!-- Flash Messages -->
    <% if (success_msg) { %>
      <div class="alert alert-success text-center"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-danger text-center"><%= error_msg %></div>
    <% } %>

    <form action="/feedback/submit" method="POST">
      <!-- Complaint ID -->
      <div class="form-group">
        <label for="complaintId"><strong>Complaint ID <span class="text-danger">*</span></strong></label>
        <input
          type="text"
          name="complaintId"
          id="complaintId"
          class="form-control form-control-sm"
          placeholder="Enter your Complaint ID"
          required
        />
      </div>

      <!-- Rating -->
      <div class="form-group mt-3">
        <label><strong>Rating <span class="text-danger">*</span></strong></label><br />
        <% for (let i = 1; i <= 5; i++) { %>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="rating" value="<%= i %>" id="star<%= i %>" required />
            <label class="form-check-label" for="star<%= i %>"><%= i %> ‚≠ê</label>
          </div>
        <% } %>
      </div>

      <!-- Comments -->
      <div class="form-group mt-3">
        <label for="comments"><strong>Comments (optional)</strong></label>
        <textarea
          name="comments"
          id="comments"
          class="form-control"
          rows="4"
          placeholder="Write your thoughts..."
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-primary mt-3"> Submit Feedback</button>
      </div>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
